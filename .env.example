# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL with pgvector for semantic search)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/workforce_agent

# ============================================================================
# SLACK API CREDENTIALS (Required for Slack features)
# ============================================================================
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Slack App Credentials (for OAuth and request verification)
SLACK_APP_ID=your-app-id-here
SLACK_CLIENT_ID=your-client-id-here
SLACK_CLIENT_SECRET=your-client-secret-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_VERIFICATION_TOKEN=your-verification-token-here

# Optional: User token for user-specific actions
# SLACK_USER_TOKEN=xoxp-your-user-token-here

# ============================================================================
# GMAIL API CREDENTIALS
# ============================================================================
GMAIL_CREDENTIALS_FILE=credentials/gmail_credentials.json
GMAIL_TOKEN_FILE=credentials/gmail_token.pickle

# ============================================================================
# NOTION API CREDENTIALS
# ============================================================================
NOTION_TOKEN=secret_your_notion_token
NOTION_PARENT_PAGE_ID=your-parent-page-id

# ============================================================================
# OPENAI API (Required for AI Agent)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================================================
# AI AGENT CONFIGURATION (Optional)
# ============================================================================
# LLM Model - GPT-4o-mini is the default (Nov 2025)
# Options: gpt-4o-mini (cheapest, 80% less cost), gpt-4o (best performance), gpt-4-turbo (legacy)
LLM_MODEL=gpt-4o-mini

# Embedding and Reranking Models (Qwen3 for high-quality semantic search)
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B
RERANKER_MODEL=Qwen/Qwen3-Reranker-4B

# Performance settings
EMBEDDING_BATCH_SIZE=32
USE_GPU=false

# API Server
API_PORT=8000
API_HOST=0.0.0.0

# ============================================================================
# DATA STORAGE
# ============================================================================
DATA_DIR=data
FILES_DIR=data/files
EXPORT_DIR=data/raw_exports

# ============================================================================
# RATE LIMITING
# ============================================================================
TIER_4_RATE_LIMIT=100
DEFAULT_RATE_LIMIT=50

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/slack_agent.log

# ============================================================================
# REAL-TIME STREAMING
# ============================================================================
# Real-time streaming
SOCKET_MODE_ENABLED=true
MAX_RECONNECT_ATTEMPTS=10

# Optional: Workspace info
WORKSPACE_NAME=your-workspace
WORKSPACE_ID=T12345678
